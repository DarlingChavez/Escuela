<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @System.Configuration.ConfigurationManager.AppSettings["SchoolName"]</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container" style="color:white">
            <div class="navbar-header" style="color:white">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" runat="server" href="~/">@System.Configuration.ConfigurationManager.AppSettings["SchoolName"]</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Acerca de nosotros", "About", "Home")</li>
                    <li>@Html.ActionLink("Contactenos", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        //System.Web.HttpContext.Current.User.Identity.IsAuthenticated;
                        bool isAuth = (Param.Instance.Logueado == null);
                        string msgUsuario = string.Empty;
                        if (isAuth)
                        {
                            msgUsuario = System.Configuration.ConfigurationManager.AppSettings["ApplicationName"];
                        }
                        else
                        {
                            msgUsuario = Param.Instance.Logueado.Nombres;
                        }

                    }
                    <li>@Html.ActionLink("Ingresar a " + msgUsuario, "Index", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @System.Configuration.ConfigurationManager.AppSettings["SchoolName"]</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Custom/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
